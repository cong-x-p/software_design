<!--miniprogram/pages/canteenManagerConsole/canteenManagerConsole.wxml-->
<view class="canteenManagerConsoleContainer">
    <view class="functionSelectionNav">
        <van-nav-bar title="档口负责人员控制台" left-text="退出" right-text="控制台" left-arrow bind:click-left="onClickLeft"/>
    </view>
    <van-card title="上架菜品" desc="点击进入输入上传菜品相关信息" thumb="./image/plus.png" id="msy-jianbing">
        <view slot="footer">
            <van-button type="info" size="mini" bindtap="clickToUploadDishes">进入</van-button>
        </view>
    </van-card>
    <van-card title="下架菜品" desc="点击下架菜品" thumb="./image/minus.jpeg" id="msy-jianbing">
        <view slot="footer">
            <van-button type="info" size="mini" bindtap="clickToDeleteDishes">进入</van-button>
        </view>
    </van-card>
    <van-card title="查看订单" desc="点击进入查看当前订单" thumb="./image/historyorder.jpeg" id="msy-jianbing">
        <view slot="footer">
            <van-button type="info" size="mini" bindtap="clickToViewCurrentOrder">进入</van-button>
        </view>
    </van-card>
</view>
